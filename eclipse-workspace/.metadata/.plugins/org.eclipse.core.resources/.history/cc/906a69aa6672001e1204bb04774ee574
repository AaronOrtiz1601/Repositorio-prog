package prog.unidad01.actividad206.paralelogramoapp;

import java.util.Random;
import java.util.Scanner;
import java.util.stream.DoubleStream;

public class ParalelogramosApp {

  public static void main(String[] args) {
    Scanner sc = new Scanner (System.in);
    double horizontal;
    DoubleStream vertical;
    double maximo;
    double minimo;
    System.out.println("EXAMEN DE AARÃ“N ORTIZ.PROPIEDADES DE LOS PARALELOGRAMOS");
    //Pido el lado horizontal del paralelogramo   
    System.out.println("Dime la longitud de los lados horizontales del paralelogramo");
    horizontal=Double.parseDouble(sc.nextLine());
    System.out.println("Introduzca el limite de los valores maximos del lado vertical");
    Random random = new Random();
    minimo=Double.parseDouble(sc.nextLine());
    maximo=Double.parseDouble(sc.nextLine());
    vertical=random.doubles(minimo,maximo);
    System.out.println( vertical);
    
    

  }
}
